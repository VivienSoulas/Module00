NAME		=	phonebook

SOURCES		=	phonebook.cpp 
OBJ_DIR		=	objects

OBJECTS		=	$(SOURCES:%.cpp=$(OBJ_DIR)/%.o)

CC			=	c++
CFLAGS		=	-Wall -Werror -Wextra -std=c++98

# Colors for output
RED			=	\033[0;31m
GREEN		=	\033[0;32m
YELLOW		=	\033[0;33m
BLUE		=	\033[0;34m
RESET		=	\033[0m


all: $(NAME)

$(NAME): $(OBJECTS)
	@$(CC) $(CFLAGS) $(OBJECTS) -o $(NAME)
	@echo "$(GREEN)\nâœ“ $(NAME) compiled successfully!\n$(RESET)"

$(OBJ_DIR)/%.o: %.cpp
	@mkdir -p $(OBJ_DIR)
	@$(CC) $(CFLAGS) -c $< -o $@
	@echo "$(BLUE)Compiled: $<$(RESET)"

# Cleaning rules
clean:
	@rm -rf $(OBJ_DIR)
	@echo "$(YELLOW)Object files removed$(RESET)"

fclean: clean
	@rm -f $(NAME)
	@echo "$(YELLOW)Executable removed$(RESET)"

re: fclean all

# Phony targets
.PHONY: all clean fclean re